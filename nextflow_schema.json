{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/./master/nextflow_schema.json",
    "title": "Deep Variant parameters",
    "description": "lore ipsum",
    "type": "object",
    "definitions": {
        "input_output_options": {
            "title": "Input/output options",
            "type": "object",
            "fa_icon": "fas fa-terminal",
            "description": "Define where the pipeline should find input data and save output data.",
            "required": [
                "outdir"
            ],
            "properties": {
                "tsv_file": {
                    "type": "string",
                    "default": "${projectDir}/data/input_bams.tsv",
                    "help_text": "specify input bam (or cram) files in tab-delimited input file:\n3 columns required: sample, object (path to cram or bam file) and object_index (index .crai or .bai)\n\ne.g:   sample\t    object  \tobject_index"
                },
                "samples_to_process": {
                    "type": "integer",
                    "default": -1,
                    "help_text": "how many samples from input tsv file to process\n -1 for all samples "
                },
                "ref_dir": {
                    "type": "string",
                    "format": "directory-path",
                    "default": "/lustre/scratch118/humgen/resources/ref/Homo_sapiens/HS38DH",
                    "fa_icon": "fas fa-folder-open"
                },
                "ref_file": {
                    "type": "string",
                    "default": "hs38DH.fa",
                    "help_text": "path to genome ref file, relative to ref_dir/"
                },
                "bed_dir": {
                    "type": "string",
                    "format": "directory-path",
                    "default": "/lustre/scratch118/humgen/resources/exome/Homo_sapiens"
                },
                "bed_file_deepvariant": {
                    "type": "string",
                    "default": "Twist/Twist_Human_Core_Exome_BI-CTR_padded_merged.bed",
                    "help_text": "path to bed files, relative to bed_dir/"
                },
                "bed_file_gatk": {
                    "type": "string",
                    "default": "Twist/Twist_Human_Core_Exome_BI-CTR_padded_merged.interval_list",
                    "help_text": "path to bed files, relative to bed_dir/"
                },
                "outdir": {
                    "type": "string",
                    "format": "directory-path",
                    "description": "The output directory where the results will be saved. You have to use absolute paths to storage on Cloud infrastructure.",
                    "fa_icon": "fas fa-folder-open"
                },
                "reportdir": {
                    "type": "string",
                    "format": "directory-path",
                    "default": "${outdir}/reports",
                    "fa_icon": "fas fa-folder-open"
                }
            }
        },
        "generic_options": {
            "title": "Generic options",
            "type": "object",
            "fa_icon": "fas fa-file-import",
            "description": "Less common options for the pipeline, herer it can be defined which steps to run",
            "properties": {
                "run_mode": {
                    "type": "string",
                    "default": "sort_inputs",
                    "enum": ["remap_inputs", "sort_inputs", "no_remap_no_sort"],
                    "help_text": "must be one of\n\n\"remap_inputs\" \"sort_inputs\" \"no_remap_no_sort\""
                },
                "run_markDuplicates": {
                    "type": "boolean",
                    "default": true
                },
                "run_coord_sort_cram": {
                    "type": "boolean",
                    "default": true
                },
                "run_deepvariant": {
                    "type": "boolean",
                    "default": true
                },
                "run_haplotypecaller": {
                    "type": "boolean",
                    "default": true
                },
                "copy_mode": {
                    "type": "string",
                    "default": "rellink",
                    "help_text": "how to stage output files from work dir into results dir\n\nchoose \"rellink\", \"symlink\", \"move\" or \"copy\" "
                },
                "email": {
                    "type": "string",
                    "format": "directory-path",
                    "default": "",
                    "fa_icon": "fa-solid fa-envelope-circle-check"
                },
                "email_on_fail": {
                    "type": "string",
                    "format": "directory-path",
                    "default": "",
                    "fa_icon": "fa-solid fa-envelope-dot"
                }
            }
        }
    }
}